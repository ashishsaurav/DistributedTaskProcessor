{
  "ConnectionStrings": {
    "DefaultConnection": "Database=TaskProcessorDb;Server=localhost\\MSSQLSERVER22;Integrated Security=SSPI;TrustServerCertificate=True;"
  },
  "Kafka": {
    "BootstrapServers": "localhost:5081",
    "TaskTopic": "task-queue",
    "ResultTopic": "result-queue",
    "DeadLetterTopic": "dead-letter-queue",
    "WorkerGroupId": "worker-group",
    "CollectorGroupId": "collector-group",
    "MaxRetries": 3,
    "SessionTimeoutMs": 45000,
    "HeartbeatIntervalMs": 15000,
    "PartitionStrategy": "HealthFirst"
  },
  "System": {
    "RowsPerTask": 1000,
    "StalledTaskTimeoutMinutes": 5,
    "WorkerHeartbeatIntervalSeconds": 30,
    "CoordinatorHeartbeatIntervalSeconds": 10,
    "LeaderTimeoutSeconds": 30,
    "DefaultPartitionSize": 10000,
    "MaxPartitionSize": 50000,
    "ProcessingTimeoutMinutes": 20,
    "HeartbeatIntervalSeconds": 30,
    "HeartbeatTimeoutSeconds": 60,
    "FaultDetectionIntervalSeconds": 30
  },
  "MultiTenant": {
    "Enabled": true,
    "DefaultMaxWorkers": 10,
    "DefaultMaxConcurrentTasks": 50,
    "IsolationLevel": "Tenant"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Confluent.Kafka": "Warning"
    }
  },
  "AllowedHosts": "*"
}
